    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.548.0",
    "next": "16.0.1",
    "next-safe-action": "^8.0.11",
    "nuqs": "^2.7.2",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.65.0",
    "sonner": "^2.0.7",
